from numpy import loadtxt, var, mean, array
from numpy.random import choice
from matplotlib.pyplot import *
print "Loading..."
x = loadtxt("/home/marius/Dokumenter/fys4411/postmann.pat/resources/data.txt")
n = len(x)
sigma = []
"""
